<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ATM_OS.PinWindow"
        Title="Enter PIN"
        Width="600"
        Height="500"
        Background="#D90028">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            
            <!-- Заголовок -->
            <TextBlock Text="Enter your PIN code" 
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
            
            <!-- Поле для PIN -->
            <TextBox x:Name="PinTextBox" 
                    Width="200" 
                    Height="40"
                    FontSize="18"
                    TextAlignment="Center"
                    MaxLength="4"
                    PasswordChar="*"
                    Background="White"
                    Foreground="Black"/>
            
            <!-- Клавиатура -->
            <Grid Width="200" Height="240">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Цифры 1-9 -->
                <Button Grid.Row="0" Grid.Column="0" Content="1" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="0" Grid.Column="1" Content="2" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="0" Grid.Column="2" Content="3" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                
                <Button Grid.Row="1" Grid.Column="0" Content="4" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                
                <Button Grid.Row="2" Grid.Column="0" Content="7" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="2" Grid.Column="1" Content="8" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="2" Grid.Column="2" Content="9" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                
                <!-- Последний ряд -->
                <Button Grid.Row="3" Grid.Column="0" Content="Clear" Click="ClearButton_Click" Background="#FF6B6B" Foreground="White" Margin="2"/>
                <Button Grid.Row="3" Grid.Column="1" Content="0" Click="NumberButton_Click" Background="White" Foreground="Black" Margin="2"/>
                <Button Grid.Row="3" Grid.Column="2" Content="OK" Click="OkButton_Click" Background="#4CAF50" Foreground="White" Margin="2"/>
            </Grid>
            
            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="ErrorText" 
                      Text="" 
                      FontSize="14"
                      Foreground="Yellow"
                      HorizontalAlignment="Center"
                      IsVisible="False"/>
            
            <!-- Кнопка возврата -->
            <Button Content="Back to Main Menu" 
                    Click="BackButton_Click"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="White"
                    Margin="0,20,0,0"/>
                    
        </StackPanel>
    </Grid>
</Window>