<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATM_OS.PinView">
    <Grid Background="#F6F7F8">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
            <TextBlock Text="Enter your PIN code" 
                      FontSize="36"
                      FontWeight="Bold"
                      Foreground="#333333"
                      HorizontalAlignment="Center"/>
            
            <TextBox x:Name="PinTextBox" 
                    Width="400" Height="80"
                    FontSize="45"
                    TextAlignment="Center"
                    MaxLength="4"
                    IsReadOnly="True"
                    Background="#FFDD2D"
                    Foreground="Black"
                    BorderThickness="0"
                    CornerRadius="15"/>
            
            
            <Grid Width="480" Height="480" HorizontalAlignment="Center" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Digits buttons -->
                <Button Grid.Row="0" Grid.Column="0" Content="1" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Content="2" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="2" Content="3" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                
                <Button Grid.Row="1" Grid.Column="0" Content="4" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                
                <Button Grid.Row="2" Grid.Column="0" Content="7" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="2" Grid.Column="1" Content="8" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="2" Grid.Column="2" Content="9" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                
                <!-- Clear, number, OK buttons -->
                <Button Grid.Row="3" Grid.Column="0" Content="Clear" Click="ClearButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="#FFDD2D" Foreground="#333333" CornerRadius="15"
                        FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="3" Grid.Column="1" Content="0" Click="NumberButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="White" Foreground="Black" CornerRadius="15"
                        FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Row="3" Grid.Column="2" Content="OK" Click="OkButton_Click" 
                        Width="120" Height="120" Margin="4"
                        Background="#FFDD2D" Foreground="#333333" CornerRadius="15"
                        FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
            
            <TextBlock x:Name="ErrorText" 
                      Text="" 
                      FontSize="20"
                      Foreground="#333333"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      IsVisible="False"/>
            
            <Button Content="Back to Main Menu" 
                    Click="BackButton_Click"
                    Background="Transparent"
                    Foreground="#333333"
                    BorderBrush="#333333"
                    BorderThickness="2"
                    Margin="0,40,0,0"
                    FontSize="20"
                    Height="60"
                    CornerRadius="10"
                    Padding="20,10"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>