<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATM_OS.ExchangeCurrencyView">
    
    <Grid Background="#FFDD2D">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
            
            <TextBlock Text="Exchange Rates"
                      FontSize="36"
                      FontWeight="Bold"
                      Foreground="#333333"
                      HorizontalAlignment="Center"/>
            
            <Border Background="#BABABA" CornerRadius="15" Padding="30" Width="500">
                <StackPanel Spacing="0">
                    <Border Background="#333333" CornerRadius="10" Padding="20" Margin="0,0,0,10">
                        <StackPanel Spacing="25">
                            
                            <StackPanel>
                                <TextBlock Text="US Dollar (USD)"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"/>
                                
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="BUY"
                                                  FontSize="14"
                                                  Foreground="#90EE90"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="USDInText"
                                                  Text="..."
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                        <TextBlock Text="BYN"
                                                  FontSize="12"
                                                  Foreground="#CCFFFFFF"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="SELL"
                                                  FontSize="14"
                                                  Foreground="#FF6B6B"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="USDOutText"
                                                  Text="..."
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                        <TextBlock Text="BYN"
                                                  FontSize="12"
                                                  Foreground="#CCFFFFFF"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Euro (EUR)"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"/>
                                
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="BUY"
                                                  FontSize="14"
                                                  Foreground="#90EE90"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="EURInText"
                                                  Text="..."
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                        <TextBlock Text="BYN"
                                                  FontSize="12"
                                                  Foreground="#CCFFFFFF"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="SELL"
                                                  FontSize="14"
                                                  Foreground="#FF6B6B"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="EUROutText"
                                                  Text="..."
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                        <TextBlock Text="BYN"
                                                  FontSize="12"
                                                  Foreground="#CCFFFFFF"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock x:Name="LastUpdateText"
                                          Text=""
                                          FontSize="12"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>
                            
                    <Button Content="Back to Main Menu"
                            Click="OnReturnHomeClick"
                            Background="#FFDD2D"
                            Foreground="#333333"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            CornerRadius="15"
                            FontSize="18"
                            Width="200"
                            Height="45"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <TextBlock x:Name="ErrorText"
                      Text=""
                      FontSize="16"
                      Foreground="#D32F2F"
                      HorizontalAlignment="Center"
                      IsVisible="False"/>
                      
        </StackPanel>
    </Grid>
</UserControl>