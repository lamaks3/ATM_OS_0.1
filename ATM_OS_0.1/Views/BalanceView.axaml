<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATM_OS.BalanceView">
    <Grid Background="#FFDD2D">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
            
            <!-- Заголовок -->
            <TextBlock Text="Account Balance"
                      FontSize="36"
                      FontWeight="Bold"
                      Foreground="#333333"
                      HorizontalAlignment="Center"/>
            
            <!-- Основная информация о балансе -->
            <Border Background="#BABABA" CornerRadius="15" Padding="30" Width="500">
                <StackPanel Spacing="0">
                    <Border Background="#333333" CornerRadius="10" Padding="20" Margin="0,0,0,10">
                        <StackPanel Spacing="20">
                            
                            <!-- Имя владельца -->
                            <StackPanel>
                                <TextBlock Text="Account Holder"
                                          FontSize="16"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="HolderNameText"
                                          Text=""
                                          FontSize="24"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Номер счета -->
                            <StackPanel>
                                <TextBlock Text="Account Number"
                                          FontSize="16"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="AccountNumberText"
                                          Text=""
                                          FontSize="20"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Текущий баланс -->
                            <StackPanel>
                                <TextBlock Text="Available Balance"
                                          FontSize="18"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="BalanceAmountText"
                                          Text=""
                                          FontSize="32"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,10,0,0"/>
                                <TextBlock x:Name="CurrencyText"
                                          Text=""
                                          FontSize="18"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Дополнительная информация -->
                            <StackPanel>
                                <TextBlock x:Name="PaymentSystemText"
                                          Text=""
                                          FontSize="14"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                                <TextBlock x:Name="ExpiryDateText"
                                          Text=""
                                          FontSize="14"
                                          Foreground="#CCFFFFFF"
                                          HorizontalAlignment="Center"
                                          Margin="0,2,0,0"/>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>
                            
                    <Button Content="Back to Main Menu"
                            Click="BackButton_Click"
                            Background="#FFDD2D"
                            Foreground="#333333"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            CornerRadius="15"
                            FontSize="18"
                            Width="200"
                            Height="45"/>
                </StackPanel>
            </Border>
            
            <!-- Сообщение -->
            <TextBlock x:Name="MessageText"
                      Text=""
                      FontSize="16"
                      Foreground="#333333"
                      HorizontalAlignment="Center"
                      IsVisible="False"/>
                      
        </StackPanel>
    </Grid>
</UserControl>