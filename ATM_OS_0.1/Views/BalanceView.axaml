<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATM_OS.BalanceView"
             Width="800" Height="600">
    <Grid Background="#FFDD2D">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
            
            <!-- Заголовок -->
            <TextBlock Text="Account Balance"
                      FontSize="36"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
            
            <!-- Основная информация о балансе -->
            <Border Background="#A3001F" CornerRadius="15" Padding="30" Width="500">
                <StackPanel Spacing="20">
                    
                    <!-- Имя владельца -->
                    <StackPanel>
                        <TextBlock Text="Account Holder"
                                  FontSize="16"
                                  Foreground="#CCFFFFFF"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="HolderNameText"
                                  Text=""
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Номер счета -->
                    <StackPanel>
                        <TextBlock Text="Account Number"
                                  FontSize="16"
                                  Foreground="#CCFFFFFF"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="AccountNumberText"
                                  Text=""
                                  FontSize="20"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Текущий баланс -->
                    <Border Background="#D90028" CornerRadius="10" Padding="20" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Available Balance"
                                      FontSize="18"
                                      Foreground="#CCFFFFFF"
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="BalanceAmountText"
                                      Text=""
                                      FontSize="32"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                            <TextBlock x:Name="CurrencyText"
                                      Text=""
                                      FontSize="18"
                                      Foreground="#CCFFFFFF"
                                      HorizontalAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Дополнительная информация -->
                    <StackPanel>
                        <TextBlock Text="Additional Information"
                                  FontSize="16"
                                  Foreground="#CCFFFFFF"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        <TextBlock x:Name="PaymentSystemText"
                                  Text=""
                                  FontSize="14"
                                  Foreground="#CCFFFFFF"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                        <TextBlock x:Name="ExpiryDateText"
                                  Text=""
                                  FontSize="14"
                                  Foreground="#CCFFFFFF"
                                  HorizontalAlignment="Center"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
            <!-- Кнопки действий -->
            <StackPanel Spacing="15" HorizontalAlignment="Center">
                <Button Content="Print Receipt"
                        Click="PrintReceiptButton_Click"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="18"
                        Width="200"
                        Height="45"/>
                
                <Button Content="Back to Main Menu"
                        Click="BackButton_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        FontSize="18"
                        Width="200"
                        Height="45"/>
            </StackPanel>
            
            <!-- Сообщение -->
            <TextBlock x:Name="MessageText"
                      Text=""
                      FontSize="16"
                      Foreground="#333333"
                      HorizontalAlignment="Center"
                      IsVisible="False"/>
                      
        </StackPanel>
    </Grid>
</UserControl>