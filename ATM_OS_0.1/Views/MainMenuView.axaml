<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATM_OS.MainMenuView">
    <Grid Background="#D90028" Margin="40">
        <StackPanel Spacing="25">
            
            <!-- Информация о пользователе -->
            <Border Background="#A3001F" CornerRadius="15" Padding="25">
                <StackPanel>
                    <TextBlock x:Name="UserNameText" 
                              Text="Welcome, "
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock x:Name="BalanceText" 
                              Text="Balance: "
                              FontSize="24"
                              Foreground="White"
                              Margin="0,10,0,0"/>
                    <TextBlock x:Name="AccountText" 
                              Text="Account: "
                              FontSize="18"
                              Foreground="#CCFFFFFF"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Операции с деньгами -->
            <TextBlock Text="Cash Operations:" 
                      FontSize="26"
                      Foreground="White"
                      Margin="0,20,0,10"/>
            
            <Grid Height="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Пополнение -->
                <Button Grid.Column="0" 
                        Content="Deposit"
                        Click="DepositButton_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="20"
                        Margin="10"
                        />
                
                <!-- Снятие -->
                <Button Grid.Column="1" 
                        Content="Withdraw"
                        Click="WithdrawButton_Click"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="20"
                        Margin="10"
                        />
                
                <!-- Баланс -->
                <!-- Баланс -->
                <Button Grid.Column="2" 
                        Content="View Balance"
                        Click="BalanceButton_Click"
                        Background="#FF9800"
                        Foreground="White"
                        FontSize="20"
                        Margin="10"
                        />
            </Grid>
            
            <!-- Выход -->
            <Button Content="Exit / Return Card" 
                    Click="ExitButton_Click"
                    Background="#F44336"
                    Foreground="White"
                    FontSize="20"
                    Height="60"
                    Margin="0,40,0,0"
                    />
            
        </StackPanel>
    </Grid>
</UserControl>